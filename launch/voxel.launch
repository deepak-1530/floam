<launch>
  <node pkg="nodelet" type="nodelet" name="pcl_manager" args="manager" output="screen" />

  <!-- Run a VoxelGrid filter to clean NaNs and downsample the data -->
  <node pkg="nodelet" type="nodelet" name="voxel_grid_mapper" args="load pcl/VoxelGrid pcl_manager" output="screen">
    <remap from="~input" to="/transformed_points"/>
    <rosparam>
      filter_field_name: x
      filter_limit_min: 0
      filter_limit_max: 30
      filter_limit_negative: True
      leaf_size: 0.30

      filter_field_name: y
      filter_limit_min: -10
      filter_limit_max: 10
      filter_limit_negative: True
      leaf_size: 0.30

      filter_field_name: z
      filter_limit_min: -1
      filter_limit_max: 2
      filter_limit_negative: True
      leaf_size: 0.30

    </rosparam>
  </node>



</launch>